@model ProyectoVideoJuegos.Models.Juego

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout_Principal.cshtml";
}

<h1>Editar</h1>

<h4>Juego</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdJuego" class="control-label"></label>
                <input asp-for="IdJuego" class="form-control" required />
                <span asp-validation-for="IdJuego" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Titulo" />
            <div class="form-group">
                <label asp-for="Año" class="control-label"></label>
                <input asp-for="Año" class="form-control" required />
                <span asp-validation-for="Año" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Protagonistas" class="control-label"></label>
                <input asp-for="Protagonistas" class="form-control" required />
                <span asp-validation-for="Protagonistas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Director" class="control-label"></label>
                <input asp-for="Director" class="form-control" required />
                <span asp-validation-for="Director" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Productor" class="control-label"></label>
                <input asp-for="Productor" class="form-control" required />
                <span asp-validation-for="Productor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Plataforma" class="control-label"></label>
                <input asp-for="Plataforma" class="form-control" required />
                <span asp-validation-for="Plataforma" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecioAlquiler" class="control-label"></label>
                <input asp-for="PrecioAlquiler" class="form-control" required />
                <span asp-validation-for="PrecioAlquiler" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
