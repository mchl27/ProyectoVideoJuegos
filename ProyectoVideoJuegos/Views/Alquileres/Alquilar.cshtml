@model IEnumerable<ProyectoVideoJuegos.Models.Alquilere>

@{
    ViewData["Title"] = "Alquiler";
    Layout = "~/Views/Shared/_Layout_Principal.cshtml";
}

<link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,700&display=swap" rel="stylesheet">

<h1>Alquiler</h1>

<p>
    <a asp-action="Alquilarcreacion">Crear nuevo alquiler</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TituloNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaAlquiler)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaVencimiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreNavigation.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TituloNavigation.Titulo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaAlquiler)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaVencimiento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Precio)
                </td>

                <td>
                    <a asp-action="Alquilardetalle" asp-route-id="@item.IdAlquiler">Detalle compra alquiler</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<form action="/Principal/Index">
    <button type="submit" class="btn btn-secondary">Regresar</button>
</form>