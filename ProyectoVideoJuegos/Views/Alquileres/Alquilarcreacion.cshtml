@model ProyectoVideoJuegos.Models.Alquilere

@{
    ViewData["Title"] = "Creacion";
    Layout = "~/Views/Shared/_Layout_Principal.cshtml";
}

<h1>Crear</h1>

<h4>Alquila un VideoJuego</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <select asp-for="Nombre" class="form-control" asp-items="ViewBag.Nombre"></select>
            </div>
            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <select asp-for="Titulo" class="form-control" asp-items="ViewBag.Titulo"></select>
            </div>
            <div class="form-group">
                <label asp-for="FechaAlquiler" class="control-label"></label>
                <input asp-for="FechaAlquiler" class="form-control" required />
                <span asp-validation-for="FechaAlquiler" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaVencimiento" class="control-label"></label>
                <input asp-for="FechaVencimiento" class="form-control" required />
                <span asp-validation-for="FechaVencimiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" required />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Creacion" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Alquilar">Regresar a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
